# Example Environment Configuration for MCP Perplexity
# Copy this file to .env and fill in your actual values

# Required: Your Perplexity API key (get from https://www.perplexity.ai/settings/api)
PERPLEXITY_API_KEY=pplx-your-api-key-here

# Optional: Model Configuration
# Available models: sonar, sonar-pro, sonar-reasoning, sonar-reasoning-pro
PERPLEXITY_MODEL=sonar-pro

# Optional: Specific models for different tools
# PERPLEXITY_MODEL_ASK=sonar-pro
# PERPLEXITY_MODEL_CHAT=sonar-pro

# Optional: Database Configuration
# Path to store chat history (can be relative or absolute)
DB_PATH=chats.db

# Optional: Web UI Configuration
# Enable the web interface for easier interaction
WEB_UI_ENABLED=false
WEB_UI_PORT=8050
WEB_UI_HOST=127.0.0.1

# Optional: Logging Configuration
# Enable debug logs for troubleshooting
DEBUG_LOGS=false